
<div class="task_index">
  <h2>To Do APP</h2>
  <%= link_to "Create New Task", "/tasks/new" %>
  <h2>【Task List】</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Task</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td></td>
          <td><%= task.title %></td>
          <td class="btn"><%= button_to "編集", edit_task_path(task.id) %></td>
          <td class="btn"><%= button_to "削除", task_path(task.id), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
